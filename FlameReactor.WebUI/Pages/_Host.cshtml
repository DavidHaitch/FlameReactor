@page "/"
@namespace FlameReactor.WebUI.Pages
@model HttpContextFeatureModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="Flame Reactor" />
    <meta property="og:description" content="Breed fractal flames together in a collaborative generative art project." />
    <meta property="og:image" content="https://flamereactor.com/current.png" />
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@@NTechnohippie">
    <meta name="twitter:title" content="Flame Reactor">
    <meta name="twitter:description" content="Breed fractal flames together in a collaborative generative art project.">
    <meta name="twitter:image" content="https://flamereactor.com/current.png">
    <title>Flame Reactor</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="FlameReactor.WebUI.styles.css" rel="stylesheet" />
    <link href="_content/Blazored.Modal/blazored-modal.css" rel="stylesheet" />
</head>
<body>
    @*<component type="typeof(App)" render-mode="ServerPrerendered" />*@
    <div>
        @(await Html.RenderComponentAsync<App>(RenderMode.Server, new { IPAddress = Model.IPAddress, UserAgent = Model.UserAgent }))
    </div>
    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">X</a>
    </div>

    <script src="~/scripts/jsInterop.js"></script>
    <script src="_framework/blazor.server.js"></script>

    <script src="_content/Blazored.Modal/blazored.modal.js"></script>
</body>
</html>
